<%= form_for(:user, url: new_user_session_path) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 jumbotron">
      <div class="row">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <div class="form-group">
              <%= f.label :email %>:
            </div>
          </div>
          <div class="col-xs-10 col-xs-offset-1">
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <div class="form-group">
              <%= f.label :password %>:
            </div>
          </div>
          <div class="col-xs-10 col-xs-offset-1">
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-3 pull-right">
          <div class="form-group">
            <%= f.submit "Log In", class: 'btn btn-primary'%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "¿Olvidó su contraseña?", new_password_path(resource_name), class: 'text-center' %>
<% end %>