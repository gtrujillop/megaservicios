<div class="container">
  <div class="col-xs-6 jumbotron text-center col-xs-offset-3">
    <h3>Edita tu cuenta</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <p>Email:</p>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <br/>
        <p>Nueva clave:</p><i><em> (<%= @minimum_password_length %> caracteres minimo)</em></i><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
        <% end %>
      </div>

      <div class="field">
        <p>Confirmar nueva clave:</p>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <br/>
        <p>Clave actual:</p>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <br />
        <%= f.submit "Actualizar", class: 'btn btn-success'  %>
      </div>
    <% end %>
    <hr>
    <h3>Cancelar cuenta</h3>

    <p>¿Aburrido? <%= button_to "Cancela tu cuenta", registration_path(resource_name), data: { confirm: "¿Estas seguro?" }, method: :delete, class: 'btn btn-danger'  %></p>
  </div>
</div>