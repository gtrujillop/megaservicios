<div class="row">
  <div class="col-md-2">
    <%= render partial: "layouts/user_menu" %>
  </div>
  <div class="col-md-10">

    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
        <h4>Clientes Registrados</h4>
      </div>
      <div class="col-md-2">
      </div>
    </div>
    <div class="row">
      <div class="table-striped table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>
                Nombre
              </th>
              <th>
                Email
              </th>
              <th>
                Teléfono
              </th>
              <th>
                Dirección
              </th>
              <th>
                Electrodomésticos
              </th>
              <th>
                Historial
              </th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user|%>
              <tr>
                <td><%= user.full_name %></td>
                <td><%= user.email %></td>
                <td><%= user.phone %></td>
                <td><%= user.address %></td>
                <td><%= link_to "Ver",
                                user_appliances_path(user_id: user.id),
                                class: 'btn btn-default' %></td>
                <td><%= link_to "Historial",
                                user_services_path(user_id: user.id),
                                class: 'btn btn-default' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <% if current_user.is_admin?  %>
      <div class="row">
        <div class="col-md-2 button-opt">
          <%= link_to "Registrar Usuario",
              new_user_path,
              class: 'btn btn-success'%>
        </div>
        <div class="col-md-10">
        </div>
      </div>
    <% end %>
  </div>
</div>
