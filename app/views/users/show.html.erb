
<div class="row">
  <div class="col-md-8 jumbotron col-md-offset-2">
    <div class="row">
      <div class="col-md-6">
        <h4> Total de Usuarios:  </h4>
        <%= @chart_presenter.users_count %>
      </div>
      <div class="col-md-6">
        <h4> Total de Servicios Realizados </h4>
        <%= @chart_presenter.services_count %>
      </div>
    </div>
    <div class="row">
      <br>
      <br>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h4> Servicios / día </h4>
        <%= line_chart  @chart_presenter.services_by_day %>
      </div>
      <div class="col-md-6">
        <h4> Nuevos Usuarios / mes </h4>
        <%= column_chart @chart_presenter.new_users %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h4> Tipo de Electrodoméstico </h4>
        <%= pie_chart  @chart_presenter.appliance_type_names %>
      </div>
      <div class="col-md-6">
        <h4> Ingresos por Servicios / mes </h4>
        <%= column_chart  @chart_presenter.services_invoice_by_month %>
      </div>
    </div>
  </div>
</div>