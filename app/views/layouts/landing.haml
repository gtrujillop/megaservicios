!!! 5
%html
  %head
    %title Mega Servicios
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{rel:'stylesheet', href:'https://fonts.googleapis.com/css?family=Noto+Sans:400,700', type:'text/css'}
    %meta{name:"viewport", content:"width=device-width, initial-scale=1"}
  %body
    = custom_bootstrap_flash
    = render partial: "partials/landing/navbar"
    %div#home
      #content.col-md-6.col-md-offset-1
        = yield
      #contactform.col-md-3.col-md-offset-1
        = render partial: "partials/landing/contact"
    = render partial: "partials/landing/footer"