.jumbotron 
  %h2.text-center Lista de Articulos
  .table-responsive
    %table.table.table-hover
      %thead
        %tr
          %th Titulo
          %th Mensaje
          %th
          %th
          %th

      %tbody
        - @articles.each do |article|
          %tr
            %td= truncate(article.title,length:10)
            %td= truncate(article.body,length:20)
            %td= link_to 'Ver', article, target: "_blank", :class => "btn btn-info"
            %td= link_to 'Editar', edit_article_path(article), :class => "btn btn-warning"
            -if article.id != 1 && article.id != 2
              %td= link_to 'Eliminar', article, :method => :delete, :data => { :confirm => 'Â¿Estas seguro?' }, :class => "btn btn-danger"
            -else
              %td
  .text-right
    = link_to 'Nuevo Articulo', new_article_path, :class => "btn btn-success"
= will_paginate @articles, :previous_label => "anterior", :next_label => "siguiente", :class => "text-center"